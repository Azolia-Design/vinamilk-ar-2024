<style lang="scss">
    .chap1-cha {
        padding-bottom: 9rem;
        &-title {
            margin-bottom: 6.8rem;
            max-width: 78rem;
            line-height: 8.5rem;
            width: 100%;
            margin-inline: auto;
            text-align: center;
        }
        &-main {
            max-width: 99.4rem;
            margin-inline: auto;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            column-gap: var(--grid-gap);
            row-gap: 4.4rem;
            .cha-item {
                color: var(--cl-blue-2);
                .label-wrap {
                    line-height: 1.2em;
                }
                .cha-main {
                    height: 23rem;
                    display: flex;
                    justify-content: space-between;
                    position: relative;
                    padding-inline: 3rem;
                    .line {
                        background-color: var(--cl-blue);
                        position: absolute;
                        left: 0;
                        bottom: 2.21rem;
                    }
                    .cha-col {
                        height: 100%;
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        justify-content: end;
                        &-inner {
                            width: 4.8rem;;
                            height: var(--col-h);
                            background-color: var(--col-bg);
                            position: relative;
                            text-align: center;
                            display: flex;
                            justify-content: center;
                            &.last {
                                position: relative;
                                &::after {
                                    content: '';
                                    display: block;
                                    position: absolute;
                                    inset: 0;
                                    background-image: var(--chart-bg);
                                    background-size: 100% auto;
                                    mix-blend-mode: color-dodge;
                                    opacity: .7;
                                    filter: invert(1);
                                }
                                
                                
                            }
                            .cha-value {
                                position: absolute;
                                bottom: 100%;
                                margin-bottom: 1rem;
                            }
                        }
                        .cha-year {
                            margin-top: 1rem;
                        }
                    }
                }
            }
        }
    }
</style>
