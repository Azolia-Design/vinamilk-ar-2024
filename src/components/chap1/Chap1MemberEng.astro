        }
        .line-decor-css {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 1rem;
            --angle: 90deg;
            background: repeating-linear-gradient(
                var(--angle),
                var(--cl-blue-2),
                var(--cl-blue-2) 18rem,
                var(--cl-blue-3) 18rem,
                var(--cl-blue-3) 36rem,
            );
            @media screen and (max-width: 767px) {
                height: .4rem;
                background: repeating-linear-gradient(
                    var(--angle),
                    var(--cl-blue-2),
                    var(--cl-blue-2) 8rem,
                    var(--cl-blue-3) 8rem,
                    var(--cl-blue-3) 16rem,
                );
            }
            &.bot {
                top: auto;
                bottom: 0;
            }
        }
        .title {
            margin-bottom: 4.2rem;
            text-align: center;
            margin-inline: auto;
            color: var(--cl-bg);
            @media screen and (max-width: 767px) {
                font-size: 3.2rem;
                line-height: 1em;
                margin-bottom: 2rem;
            }
        }
        .img-wrap {
            display: grid;
            width: 100%;
            max-width: 79rem;
            margin-inline: auto;
            .img-inner {
                grid-column: 1/2;
                grid-row: 1/2;
                pointer-events: none;
            }
            .img-pin-wrap {
                grid-column: 1/2;
                grid-row: 1/2;
                pointer-events: none;
                position: relative;
                .pin-item {
                    position: absolute;
                    top: var(--pos-top);
                    left: var(--pos-left);
                    width: 0;
                    height: 0;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    .pin-item-inner {
                        pointer-events: auto;
                        position: absolute;
                        width: 2.8rem;
                        height: 2.8rem;
                        border-radius: 50%;
                        border: solid 1px var(--cl-blue-3);
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        @media screen and (max-width: 767px) {
                            width: 1.4rem;
                            height: 1.4rem;
                        }
                        .pin-txt {
                            color: var(--cl-bg);
                            text-align: center;
                            @media screen and (max-width: 767px) {
                                font-size: .7rem;
                            }
                        }
                    }
                }
            }

        }
        &-main {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            column-gap: var(--grid-gap);
            padding-block: 1.2rem 14.8rem;
            @media screen and (max-width: 767px) {
                grid-template-columns: 1fr;
                padding-block: 3.2rem 4rem;
            }
            .item-wrap {
                display: flex;
                align-items: center;
                color: var(--cl-blue);
