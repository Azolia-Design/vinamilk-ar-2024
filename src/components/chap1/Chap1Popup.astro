<style lang="scss">
    .hidden-data {
        display: none;
    }
    .popup {
        opacity: 0;
        pointer-events: none;
        transition: opacity 600ms ease;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 999;
        &.active {
            opacity: 1;
            pointer-events: auto;
            .popup-wrap {
                transform: none;
            }
        }
        &-overlay {
            position: relative;
            width: 100%;
            height: 100%;
            z-index: 1;
            background-color: rgba(0,0,0,.7);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        &-wrap {
            border-radius: 2rem;
            background-color: var(--cl-bg);
            padding-block: 2rem;
            padding-inline: 2.3rem;
            width: 99.4rem;
            max-width: calc(100vw - 16rem);
            height: 57.8rem;
            max-height: calc(100vh - 12rem);
            position: relative;
            transform: translateY(20%);
            transition: transform 600ms ease;
        }
        &-inner {
            height: 100%;
            display: grid;
            grid-template-columns: 4.66fr 5.34fr;
            column-gap: 5.9rem;
            position: relative;
            z-index: 1;
            color: var(--cl-txt);
            .box-left {
                height: 100%;
                .img-wrap {
                    border-radius: .8rem;
                    overflow: hidden;
                    margin-bottom: 1.8rem;
                }
                .name-wrap {
                    color: var(--cl-blue);
                    margin-bottom: 1rem;
                    .label {
                        margin-bottom: -.2rem;
                    }
                }
                .jobs {
                    color: var(--cl-blue);
                    margin-bottom: 2rem;
                }
                .line-dash {
                    margin-bottom: 2rem;
                }
            }
            .box-right {
                height: 100%;
                overflow-y: auto;
                padding-right: 3rem;
                .box-richtxt {
                    p {
                        margin-bottom: 1.7rem;
                    }
                    .txt-bold {
                        margin-top: 2.2rem;
                        margin-bottom: 1.7rem;
                    }
                }
            }
        }
        &-close {
            position: absolute;
            z-index: 2;
            top: .5rem;
            right: .5rem;
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            border: solid max(.1rem, 1px) var(--cl-blue);
            color: var(--cl-blue);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 400ms ease;
            background-color: var(--cl-bg);
            &:hover {
                background-color: var(--cl-blue);
                color: var(--cl-bg);
            }
        }
    }
</style>
<script>
    document.querySelector('.popup-close').addEventListener('click', function(e) {
        e.preventDefault()
        document.querySelector('.popup').classList.remove('active')
    })
    let allMembers = document.querySelectorAll('[data-popup]');
    let allData = document.querySelectorAll('.hidden-data .data');
    let popup = document.querySelector('.popup-wrap')
    console.log(popup)
    allMembers.forEach((el, idx) => {
        el.addEventListener('click', function(e) {
            e.preventDefault()
            let target = parseInt(el.getAttribute('data-mem')) - 1;
            let data = allData[target]
            popup.querySelector('.box-left .img-wrap').innerHTML = data.querySelector('.img').innerHTML;
            popup.querySelector('.box-left .label').innerHTML = data.querySelector('.label').innerHTML;
            popup.querySelector('.box-left .name').innerHTML = data.querySelector('.name').innerHTML;
            document.querySelector('.popup').classList.add('active')
        })
    })
</script>