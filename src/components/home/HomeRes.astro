---
import { Image } from "astro:assets";
import homeResBox1 from '../../assets/Frame 280.jpg'
import homeResBox2 from '../../assets/Frame 278.jpg'
import homeResBox3 from '../../assets/Frame 276.jpg'
import homeResBox4 from '../../assets/Frame 281.jpg'
import homeResBox5 from '../../assets/Frame 279.jpg'
import homeResBox6 from '../../assets/Frame 277.jpg'
import homeResBox7 from '../../assets/Frame 275.jpg'
import homeResBoxBike from '../../assets/Frame 282.png'
import homeResBoxForest from '../../assets/Frame 283.png'
import homeResBoxRebrand from '../../assets/rebrand.jpg'
import homeFtBg from '../../assets/home-ft.jpg';
import homeResBoxBoxes from '../../assets/vnm-boxes.jpg';
import homeResBoxCow from '../../assets/Frame.png'
---
<section class="home-res">
    <div class="container grid">
        <h1 class="heading h-78 txt-bold txt-up txt-blue home-res-title" data-aos="fade-up">
            Kết quả nổi bật
        </h1>
        <div class="home-res-grid">
            <div class="home-res-box" data-aos="fade-up">
                <div class="box-content">
                    <div class="heading txt-162 txt-up txt-bold number-value">
                        <span data-counter>47</span>
                    </div>
                    <div class="txt txt-36 number-unit">
                        Năm
                    </div>
                    <div class="txt txt-24 label">
                        Đồng hành và phục vụ người tiêu dùng Việt Nam
                    </div>
                </div>
                <Image src={homeResBox1} alt="" class="box-img img-fill" />
                <Image src={homeResBox2} alt="" class="box-img img-fill" />
                <Image src={homeResBox3} alt="" class="box-img img-fill span-2" />
                <Image src={homeResBox4} alt="" class="box-img img-fill" />
                <Image src={homeResBox5} alt="" class="box-img img-fill" />
                <Image src={homeResBox6} alt="" class="box-img img-fill" />
                <Image src={homeResBox7} alt="" class="box-img img-fill" />
            </div>
            <div class="home-res-box bg-stripe" data-aos="fade-up-right">
                <div class="box-content left">
                    <div class="txt txt-36 txt-up label">
                        Tổng doanh thu hợp nhất
                    </div>
                    <div class="heading txt-162 txt-up txt-bold number-value">
                        <span data-counter>60.479</span>
                    </div>
                    <div class="txt txt-36 txt-up number-unit">
                        Tỷ đồng
                    </div>
                    <div class="line line-ver"></div>
                </div>
                <div class="box-content right">
                    <div class="heading txt-128 txt-up txt-bold number-value">
                        +<span data-counter>404</span>
                    </div>
                    <div class="txt txt-20 number-unit">
                        Tỷ đồng so với cùng kỳ
                    </div>
                </div>
            </div>
            <div class="home-res-box" data-aos="fade-up-left">
                <div class="box-content">
                    <div class="txt txt-20 label">
                        Nộp ngân sách Nhà nước
                    </div>
                    <div class="heading txt-128 txt-up txt-bold number-value">
                        <span data-counter>3.820</span>
                    </div>
                    <div class="txt txt-20 number-unit">
                        Tỷ đồng
                    </div>
                </div>
            </div>
            <div class="home-res-box" data-aos="fade-up-right">
                <div class="box-content">
                    <div class="txt txt-20 txt-up label">
                        Lợi nhuận trước thuế hợp nhất
                    </div>
                    <div class="value-wrap top">
                        <div class="heading txt-128 txt-bold txt-up number-value">
                            <span data-counter>10.968</span>
                        </div>
                        <div class="txt txt-20 number-unit">
                            Tỷ đồng
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="value-wrap bot">
                        <div class="heading txt-40 txt-up txt-bold number-value">
                            +<span data-counter>472</span>
                        </div>
                        <div class="txt txt-20 number-unit">
                            Tỷ đồng so với cùng kỳ
                        </div>
                    </div>
                </div>
            </div>
            <div class="home-res-box" data-aos="fade-up-left">
                <div class="box-content">
                    <div class="heading txt-128 txt-up txt-bold number-value">
                        <span data-counter>4</span> Triệu
                    </div>
                    <div class="txt txt-24 number-unit">
                        Đơn hàng trực tuyến
                    </div>
                </div>
                <div class="box-img">
                    <Image src={homeResBoxBike} alt="" />
                </div>
            </div>
            <div class="home-res-box bg-stripe" data-aos="fade-up-right">
                <div class="box-content">
                    <div class="value-wrap top">
                        <div class="txt txt-20 txt-up label">
                            Giá trị thương hiệu Vinamilk
                        </div>
                        <div class="heading txt-128 txt-up txt-bold number-value">
                            <span data-counter>3</span>
                        </div>
                        <div class="unit-wrap">
                            <div class="txt txt-20 number-unit">
                                tỷ đô la Mỹ
                            </div>
                            <div class="txt txt-13 number-unit-sub">
                                Theo Brand Finance
                            </div>
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="value-wrap bot">
                        <div class="heading txt-40 txt-up txt-bold number-value">
                            +<span data-counter>200</span>
                        </div>
                        <div class="txt txt-20 number-unit">
                            Triệu Đô la Mỹ so với cùng kỳ
                        </div>
                    </div>
                </div>
            </div>
            <div class="home-res-box" data-aos="fade-up">
                <div class="box-content">
                    <div class="heading txt-128 txt-up txt-bold number-value">
                        <span data-counter>60</span>
                    </div>
                    <div class="txt txt-20 number-unit">
                        Thị trường xuất khẩu lũy kế
                    </div>
                </div>
            </div>
            <div class="home-res-box" data-aos="fade-up-left">
                <div class="box-img">
                    <Image src={homeResBoxBoxes} alt="" class="img-fill"/>
                </div>
            </div>
            <div class="home-res-box bg-stripe" data-aos="fade-up-right">
                <div class="box-content">
                    <div class="value-wrap">
                        <div class="heading txt-96 txt-up txt-bold number-value">
                            <span data-counter>25</span>
                        </div>
                        <div class="heading txt-48 txt-up txt-bold number-unit">
                            Ha
                        </div>
                    </div>
                    <div class="txt txt-20 label">
                        Diện tích rừng ngập mặn được Vinamilk khoanh nuôi tái sinh
                    </div>
                    <div class="box-img">
                        <Image src={homeResBoxForest} alt="" />
                    </div>
                </div>
            </div>
            <div class="home-res-box bg-stripe" data-aos="fade-up">
                <div class="box-content">
                    <div class="value-wrap">
                        <div class="heading txt-142 txt-up txt-bold number-value">
                            <span data-counter>02</span>
                        </div>
                        <div class="box-img">
                            <Image src={homeResBoxCow} alt="" />
                        </div>
                    </div>
                    <div class="txt txt-20 label">
                        Đơn vị nhà máy và trang trại của Vinamilk được công nhận Trung hòa carbon theo tiêu chuẩn PAS 2060:2014
                    </div>
                </div>
            </div>
            <div class="home-res-box" data-aos="fade-up-left">
                <div class="box-img">
                    <Image src={homeResBoxRebrand} alt="" class="img-fill"/>
                </div>
            </div>
            <div class="home-res-box bg-stripe" data-aos="fade-up-left">
                <div class="box-content">
                    <div class="heading txt-32 txt-up txt-bold label">
                        Ra mắt Bộ nhận diện thương hiệu mới
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="home-res-img" data-aos="fade-up">
        <Image src={homeFtBg} alt="" />
    </div>
</section>
<style lang="scss">
    .home-res {
        padding-top: 8.2rem;
        padding-bottom: 6rem;
        @media screen and (max-width: 767px) {
            padding-top: 3.8rem;
            padding-bottom: 6rem;
        }
        &-title {
            grid-column: 1/-1;
            text-align: center;
            margin-inline: auto;
            margin-bottom: 8.5rem;
            @media screen and (max-width: 767px) {
                margin-bottom: 3.8rem;
                font-size: 3.6rem;
            }
        }
        &-grid {
            grid-column: 1/-1;
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            column-gap: var(--grid-gap);
            row-gap: var(--grid-gap);
            @media screen and (max-width: 767px) {
                grid-template-columns: repeat(6, 1fr);
            }
        }
        &-box {
            border-radius: 1.4rem;
            contain: paint;
            background-color: rgba(0,0,0,.1);
            height: 100%;
            @media screen and (max-width: 767px) {
                border-radius: 1.2rem;
            }
            @media screen and (max-width: 767px) {
            }
            &:nth-child(1) {
                grid-column: span 12;
                display: grid;                
                grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
                @media screen and (max-width: 767px) {
                    grid-template-columns: repeat(4, 1fr);
                    grid-column: span 6;
                }
                .box-content {
                    grid-column: span 1;
                    grid-row: span 2;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    padding-block: 2.3rem 5.3rem;
                    padding-inline: 4.7rem;
                    color: var(--cl-bg);
                    text-align: center;
                    background-color: var(--cl-blue);
                    @media screen and (max-width: 767px) {
                        grid-column: span 4;
                        grid-row: span 1;
                        display: grid;
                        grid-template-columns: 7.1rem 1fr;
                        column-gap: 2.4rem;
                        padding-block: .3rem .5rem;
                        padding-inline: 4.7rem 2.3rem;
                        text-align: left;
                    }
                    .number-value {
                        margin-bottom: -2.5rem;
                        @media screen and (max-width: 767px) {
                            grid-column: 1/2;
                            grid-row: 1/3;
                            margin-bottom: 0;
                            font-size: 9.6rem;
                        }
                    } 
                    .number-unit {
                        margin-bottom: .8rem;
                        @media screen and (max-width: 767px) {
                            font-size: 2.4rem;
                            margin-bottom: .4rem;
                            align-self: end;
                        }
                    }
                    .label {
                        max-width: 30.4rem;
                        @media screen and (max-width: 767px) {
                            font-size: 1.4rem;
                            max-width: 19.6rem;
                            align-self: start;
                        }
                    }
                }
                .box-img {
                    height: 100%;
                    &.span-2 {
                        grid-column: span 2;
                    }
                }
            }
            &:nth-child(2) {
                grid-column: span 9;
                display: grid;
                grid-template-columns: 6.6fr 3.4fr;
                background-color: var(--cl-blue-3);
                color: var(--cl-blue);
                @media screen and (max-width: 767px) {
                    grid-column: span 6;
                }
                .box-content {
                    display: flex;
                    flex-direction: column;
                    &.left {
                        padding-block: 4.5rem 2.9rem;
                        padding-inline: 4.8rem;
                        position: relative;
                        align-items: start;
                        justify-content: center;
                        @media screen and (max-width: 767px) {
                            padding-block: 1.4rem 1.1rem;
                            padding-inline: 1.1rem 2.5rem;
                        }
                        .label {
                            margin-bottom: -1.5rem;
                            font-size: 3rem;
                            margin-right: -1rem;
                            @media screen and (max-width: 767px) {
                                margin-bottom: -.2rem;
                                font-size: 1.4rem;
                                margin-right: -2rem;
                            }
                        }
                        .number-value {
                            margin-bottom: -1.4rem;
                            @media screen and (max-width: 767px) {
                                font-size: 6.6rem;
                                margin-bottom: -.1rem;
                            }
                        }
                        .number-unit {
                            font-size: 3rem;
                            @media screen and (max-width: 767px) {
                                font-size: 1.4rem;
                            }
                        }
                        .line-ver {
                            position: absolute;
                            height: auto;
                            top: 4.5rem;
                            right: 0;
                            bottom: 2.9rem;
                            background-color: var(--cl-blue);
                            @media screen and (max-width: 767px) {
                                top: 2.2rem;
                                bottom: 1.1rem;
                            }
                        }
                    }
                    &.right {
                        align-items: center;
                        text-align: center;
                        justify-content: center;
                        margin-bottom: 1.8rem;
                        padding-inline: 3.3rem 7.6rem;
                        @media screen and (max-width: 767px) {
                            margin-bottom: 0;
                            padding-inline: 1.3rem 2rem;
                        }
                        .number-value {
                            margin-bottom: -1.6rem;
                            @media screen and (max-width: 767px) {
                                margin-bottom: -1rem;
                                font-size: 6.6rem;
                            }
                        }
                        .number-unit {
                            max-width: 15.3rem;
                            margin-left: 2.3rem;
                            @media screen and (max-width: 767px) {
                                max-width: 11.1rem;
                                font-size: 1.4rem;
                                margin-left: 0;
                                text-align: center;
                            }
                        }
                    }
                }
            }
            &:nth-child(3) {
                grid-column: span 3;
                background-color: var(--cl-pink);
                color: var(--cl-blue);
                @media screen and (max-width: 767px) {
                    grid-column: span 2;
                    margin-right: -3.5rem;
                }
                .box-content {
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    padding-block: 8.4rem 6.2rem;
                    padding-inline: 1.9rem;
                    @media screen and (max-width: 767px) {
                        padding-block: 1.3rem 1.1rem;
                        padding-inline: 1.1rem 1.6rem;
                    }
                    .label {
                        margin-bottom: -1.1rem;
                        @media screen and (max-width: 767px) {
                            font-size: 1.4rem;
                            margin-bottom: -.9rem;
                        }
                    }
                    .number-value {
                        margin-bottom: -1.3rem;
                        @media screen and (max-width: 767px) {
                            font-size: 6.4rem;
                            margin-bottom: -.1rem;
                        }
                    }
                    .number-unit {
                        @media screen and (max-width: 767px) {
                            font-size: 1.4rem;
                        }
                    }
                }
            }
            &:nth-child(4) {
                grid-column: span 6;
                background-color: var(--cl-blue);
                color: var(--cl-bg);
                padding-block: 3.2rem 1.8rem;
                padding-inline: 5rem 6.6rem;
                @media screen and (max-width: 767px) {
                    grid-column: span 4;
                    margin-left: 3.4rem;
                    padding-block: .9rem .7rem;
                    padding-inline: .9rem .4rem;
                }
                .box-content {
                    .label {
                        margin-bottom: -1rem;
                        @media screen and (max-width: 767px) {
                            margin-bottom: -.5rem;
                            font-size: 1.4rem;
                            max-width: 13.2rem;
                        }
                    }
                    .value-wrap {
                        display: flex;
                        align-items: end;
                        justify-content: start;
                        margin-bottom: -1.2rem;
                        &.top {
                            @media screen and (max-width: 767px) {
                                margin-bottom: 0;
                            }
                            .number-value {
                                @media screen and (max-width: 767px) {
                                    font-size: 6rem;
                                }
                            }
                            .number-unit {
                                margin-left: 1.2rem;
                                margin-bottom: 2.8rem;
                                @media screen and (max-width: 767px) {
                                    font-size: 1.4rem;
                                    margin-left: .2rem;
                                    margin-bottom: 1.2rem;
                                }
                            }
                        }
                        &.bot {
                            @media screen and (max-width: 767px) {
                                margin-bottom: 0;
                            }
                            .number-value {
                                @media screen and (max-width: 767px) {
                                   font-size: 2.4rem;
                                }
                            }
                            .number-unit {
                                margin-left: 2.3rem;
                                margin-bottom: 1.1rem;
                                @media screen and (max-width: 767px) {
                                    font-size: 1.4rem;
                                    margin-left: .2rem;
                                    letter-spacing: .01em;
                                    margin-bottom: .3rem;
                                }
                            }
                        }
                    }
                    .line {
                        margin-bottom: .3rem;
                        background-color: var(--cl-white);
                        @media screen and (max-width: 767px) {
                            display: none;
                        }
                    }
                }
            }
            &:nth-child(5) {
                grid-column: span 6;
                display: grid;
                grid-template-columns: 7.1fr 2.9fr;
                background-color: var(--cl-green);
                color: var(--cl-bg);
                @media screen and (max-width: 767px) {
                    grid-column: span 6;
                    grid-template-columns: 6.6fr 3.4fr;
                }
                .box-content {
                    padding-block: 3.4rem 5.4rem;
                    padding-inline: 4.6rem;
                    display: flex;
                    align-items: start;
                    flex-direction: column;
                    @media screen and (max-width: 767px) {
                        padding-block: .7rem 1.9rem;
                        padding-inline: 4rem 2.4rem;
                    }
                    .number-value {
                        margin-right: -1rem;
                        @media screen and (max-width: 767px) {
                            font-size: 6.6rem;
                            margin-left: 0;
                            margin-bottom: -.7rem;
                        }
                    }
                    .number-unit {
                        @media screen and (max-width: 767px) {
                            font-size: 1.4rem;
                        }
                    }
                }
                .box-img {
                    margin-right: 2rem;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    @media screen and (max-width: 767px) {
                        margin-right: 2.5rem;
                    }
                }
            }
            &:nth-child(6) {
                grid-column: span 5;
                background-color: var(--cl-blue);
                color: var(--cl-bg);
                display: flex;
                align-items: center;
                @media screen and (max-width: 767px) {
                    grid-column: span 6;
                }
                .box-content {
                    margin-block: -.6rem 3.3rem;
                    padding-inline: 3.6rem 8.9rem;
                    @media screen and (max-width: 767px) {
                        margin-block: 0 2rem;
                        padding-inline: 4.2rem;
                        width: 100%;
                    }
                    .value-wrap {
                        display: flex;
                        align-items: end;
                        &.top {
                            margin-bottom: -1.7rem;
                            @media screen and (max-width: 767px) {
                                margin-bottom: -1.2rem;
                            }
                            .label {
                                margin-right: 1.4rem;
                                margin-bottom: 2.9rem;
                                max-width: 13.5rem;
                                text-align: right;
                                @media screen and (max-width: 767px) {
                                    margin-right: 1rem;
                                    font-size: 1.4rem;
                                    margin-bottom: 2.1rem;
                                    max-width: 9.1rem;
                                }
                            }
                            .number-value {
                                @media screen and (max-width: 767px) {
                                    font-size: 9.6rem;
                                }
                            }
                            .unit-wrap {
                                margin-left: 1.2rem;
                                margin-bottom: 2.9rem;
                                @media screen and (max-width: 767px) {
                                    margin-left: .9rem;
                                    margin-bottom: 2.3rem;
                                }
                                .number-unit {
                                    margin-bottom: .1rem;
                                    @media screen and (max-width: 767px) {
                                        margin-bottom: 0;
                                        font-size: 1.4rem;
                                    }
                                }
                                .number-unit-sub {
                                    color: var(--cl-blue-3);
                                }
                            }
                        }
                        &.bot {
                            .number-value {
                                @media screen and (max-width: 767px) {
                                    font-size: 3.2rem;
                                }
                            }
                            .number-unit {
                                margin-left: 2rem;
                                margin-bottom: 1.1rem;
                                @media screen and (max-width: 767px) {
                                    font-size: 1.4rem;
                                    margin-left: 1.1rem;
                                    margin-bottom: .8rem;
                                }
                            }
                        }
                    }
                    .line {
                        background-color: var(--cl-bg);
                        margin-bottom: .2rem;
                    }
                }
            }
            &:nth-child(7) {
                grid-column: span 3;
                background-color: var(--cl-blue-2);
                color: var(--cl-bg);
                @media screen and (max-width: 767px) {
                    grid-column: span 2;
                }
                .box-content {
                    height: 100%;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    text-align: center;
                    .number-value {
                        margin-bottom: -.8rem;
                        @media screen and (max-width: 767px) {
                            font-size: 9.6rem;
                            margin-bottom: -1.3rem;
                        }
                    }
                    .number-unit {
                        margin-bottom: 2rem;
                        max-width: 14.9rem;
                        @media screen and (max-width: 767px) {
                            font-size: 1.4rem;
                            margin-bottom: 1.3rem;
                            max-width: 8.3rem;
                        }
                    }
                }
            }
            &:nth-child(8) {
                grid-column: span 4;
                @media screen and (max-width: 767px) {
                }
                .box-img {
                    width: 100%;
                    height: 100%;
                }
            }
            &:nth-child(9) {
                grid-column: span 3;
                grid-row: span 2;
                background-color: var(--cl-green-li);
                color: var(--cl-bg);
                @media screen and (max-width: 767px) {
                    grid-column: span 6;
                    grid-row: span 1;
                }
                .box-content {
                    display: flex;
                    flex-direction: column;
                    align-items: start;
                    justify-content: center;
                    height: 100%;
                    padding-block: .3rem 1.2rem;
                    padding-inline: 2.5rem 1.5rem;
                    @media screen and (max-width: 767px) {
                        padding-block: 0 .9rem;
                        padding-inline: 3.2rem 5.6rem;
                    }
                    .value-wrap {
                        display: flex;
                        align-items: end;
                        justify-content: start;
                        margin-bottom: -.8rem;
                        @media screen and (max-width: 767px) {
                            margin-bottom: -1.2rem;
                        }
                        .number-value {
                            margin-right: 1.8rem;
                            @media screen and (max-width: 767px) {
                                margin-right: .9rem;
                                font-size: 9.6rem;
                            }
                        }
                        .number-unit {
                            margin-bottom: 1.3rem;
                            @media screen and (max-width: 767px) {
                                margin-bottom: 1.18rem;
                                font-size: 4.8rem;
                            }
                        }
                    }
                    .label {
                        margin-bottom: -1.8rem;
                        @media screen and (max-width: 767px) {
                            margin-bottom: 0;
                            font-size: 1.4rem;
                        }
                    }
                    .box-img {
                        max-width: 8.6rem;
