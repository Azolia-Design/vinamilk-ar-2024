---
import { Image } from "astro:assets";
import homeHeroBg from '../../assets/home-hero.jpg';
import { getImage } from "astro:assets";
import bgTexture from "../../assets/home-hero-pattern.jpg";
const OpBgTexture = await getImage({src: bgTexture, format: 'webp', width: bgTexture.width / 2})
---
<section class="home-hero">
    <div class="container">
        <div class="home-hero-title-wrap">
            <h1 class="heading txt-bold txt-up txt-blue home-hero-title" data-aos="fade-right">
                Care to <br>Change
            </h1>
            <h2 class="txt txt-blue txt-up home-hero-sub" data-aos="fade-right" data-aos-delay="200">
                2023 annual report
            </h2>
        </div>
        <div class="home-hero-img">
            <Image src={homeHeroBg} alt="" class="img-h img-fit img-fit-bot" data-aos="fade-up" data-aos-delay="200" />
            <div class="home-hero-pattern home-hero-pattern-left"style={`--bg-txt: url(${OpBgTexture.src})`}></div>
        </div>
    </div>
</section>
<style lang="scss" is:global>
    .home-hero {
        padding-top: 9rem;
        height: 100vh;
        contain: paint;
        overflow: hidden;
        @media screen and (max-width: 767px) {
            padding-top: 5.8rem;
            height: auto;
        }
        .container {
            position: relative;
            height: 100%;
        }
        &-title-wrap {
            height: 100%;
            position: relative;
            z-index: 2;
        }
        &-title {
            padding-top: 15.97826086956522vh; //147/920
            font-size: 21rem;
            margin-left: -.8rem;
            line-height: .88em;
            margin-bottom: .6rem;
            letter-spacing: 0;
            @media screen and (max-width: 767px) {
                padding-top: 4.4rem;
                margin-left: 0;
                font-size: 6.4rem;
                line-height: .88em;
                margin-bottom: .5rem;
                text-align: center;
                br {
                    display: none !important;
                }
            }
        }
        &-sub {
            font-size: 3rem;
            @media screen and (max-width: 767px) {
                font-size: 1.3rem;
                text-align: center;
            }
        }
        &-img {
            position: absolute;
            z-index: 1;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            @media screen and (max-width: 767px){
                position: relative;
                overflow: hidden;
                margin-left: -1.6rem;
                margin-top: -1rem;
                margin-right: -1.6rem;
                width: calc(100% + 3.2rem);
                img {
                    transform: translateX(-23rem) !important;
                    height: 34.5rem;
                    width: auto;
                }
            }
        }
        &-pattern {
            position: absolute;
            z-index: 3;
            height: 1.2rem;
            width: 100vw;
            left: 50%;
            transform: translateX(-50%);
            background: var(--bg-txt);
            background-position: top center;
            background-size: auto 100%;
            background-repeat: repeat-x;
            bottom: 0;
            @media screen and (max-width: 767px) {
                height: .4rem;
            }
        }
    }
</style>