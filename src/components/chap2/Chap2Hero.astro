---
import { Image } from "astro:assets";
import chap2HeroImg from '../../assets/chap2HeroImg.png';
---
<section class="chap2-hero">
    <div class="container grid">
        <div class="chap2-hero-content">
            <h1 class="heading txt-96 txt-bold title">
                Báo cáo hoạt động
            </h1>
            <div class="hero-list">
                <a href="#" class="hero-list-item">
                    <div class="txt txt-16 hero-list-txt">
                        Tổng quan ngành sữa Việt Nam năm 2023
                    </div>
                    <div class="line"></div>
                </a>
                <a href="#" class="hero-list-item">
                    <div class="txt txt-16 hero-list-txt">
                        Giải thưởng và danh hiệu 2023
                    </div>
                    <div class="line"></div>
                </a>
                <a href="#" class="hero-list-item">
                    <div class="txt txt-16 hero-list-txt">
                        Các hoạt động cộng đồng năm 2023
                    </div>
                    <div class="line"></div>
                </a>
            </div>
        </div>
        <div class="chap2-hero-img">
            <Image src={chap2HeroImg} alt="" class="img-h img-fit img-fit-bot"/>
        </div>
    </div>
    <div class="line line-decor"></div>
</section>

<style lang="scss">
    .chap2-hero {
        padding-top: 9rem;
        height: 100vh;
        contain: paint;
        .container {
            position: relative;
            height: 100%;
        }
        &-img {
            position: absolute;
            z-index: 1;
            top: -6.3rem;
            left: 0;
            width: 100%;
            height: calc(100% + 6.3rem);
            pointer-events: none;
        }
        & > .line-decor {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 1.1rem;
            z-index: 2;
            background-size: auto 1.1rem;
            background-repeat: repeat-x;
        }
        &-content {
            grid-column: 1/8;
            display: flex;
            position: relative;
            z-index: 2;
            flex-direction: column;
            align-items: start;
            padding-top: 9.7rem;
            color: var(--cl-blue);
            .title {
                margin-bottom: 2rem;
                line-height: 7.4rem;
            }
            .hero-list {
                display: flex;
                flex-direction: column;
                min-width: 27.6rem
            }
            .hero-list-item {
                padding-block: .8rem .9rem;
                position: relative;
                .line {
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    background-color: var(--cl-blue);
                }
            }
        }
    }
</style>
