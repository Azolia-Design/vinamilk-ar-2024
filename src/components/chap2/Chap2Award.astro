<style lang="scss">
    .chap2-award {
        padding-bottom: 8.2rem;
        @media screen and (max-width: 767px) {
            padding-bottom: 4.4rem;
        }
        &-title {
            text-align: center;
            margin-bottom: 7.8rem;
            color: var(--cl-blue);
            @media screen and (max-width: 767px) {
                font-size: 4.2rem;
                line-height: 1em;
                margin-bottom: 3.4rem;
            }
        }
        &-grid {
            display: grid;
            grid-template-columns: repeat(12, 1fr);
            gap: var(--grid-gap);
            @media screen and (max-width: 767px) {
                grid-template-columns: 1fr;
            }
        }
        &-box {
            border-radius: 1.4rem;
            overflow: hidden;
            @media screen and (max-width: 767px) {
                grid-column: span 1 !important;
            }
            &:nth-child(1) {
                grid-column: span 5;
                background-color: var(--cl-green-dark);
                color: var(--cl-bg);
                .box-content {
                    padding-block: 2.9rem 2.5rem;
                    padding-inline: 2.4rem 3.5rem;
                    display: flex;
                    flex-direction: column;
                    @media screen and (max-width: 767px) {
                        padding-block: 1.9rem 1rem;
                        padding-inline: 1.8rem 2rem;
                    }
                    .title {
                        margin-bottom: 4.3rem;
                        line-height: 6rem;
                        @media screen and (max-width: 767px) {
                            margin-bottom: .8rem;
                        }
                    }
                    img {
                        width: 18.5rem;
                        margin-top: -5.2rem;
                        pointer-events: none;
                        margin-left: auto;
                        @media screen and (max-width: 767px) {
                            width: 14.4rem;
                            margin-top: -4.8rem;
                        }
                    }
                }
            }
            &:nth-child(2) {
                grid-column: span 7;
                background-color: var(--cl-green-dark);
                color: var(--cl-bg);
                .box-content {
                    padding-block: 6rem 5.7rem;
                    padding-inline: 4.9rem 4rem;
                    display: flex;
                    @media screen and (max-width: 767px) {
                        padding-block: 2.5rem 1.6rem;
                        padding-inline: 2rem;
                        flex-direction: column;
                        align-items: center;
                    }
                    img {
                        width: 23.8rem;
                        pointer-events: none;
                        margin-right: 2rem;
                        @media screen and (max-width: 767px) {
                            margin-right: 0;
                            width: 12rem;
                        }
                    }
                    .list {
                        display: flex;
                        flex-direction: column;
                        justify-content: space-between;
                        padding-block: 1.6rem;
                        @media screen and (max-width: 767px) {
                            padding-block: 2rem 0;
                            row-gap: 1.2rem;
                        }
                        .list-item {
                            display: flex;
                            align-items: start;
                            .dot {
                                flex: none;
                                width: 0.4rem;
                                height: 0.4rem;
                                background-color: currentColor;
                                border-radius: 50%;
                                margin-top: 1rem;
                                margin-inline: 1.2rem;
                            }
                        }
                    }
                }
            }
            &:nth-child(3) {
                grid-column: span 5;
                background-color: var(--cl-green);
                color: var(--cl-bg);
                .box-content {
                    padding-block: 2.6rem 3.2rem;
                    padding-inline: 2.4rem 3.5rem;
                    display: flex;
                    flex-direction: column;
                    position: relative;
                    @media screen and (max-width: 767px) {
                        padding-block: 2.6rem 1.8rem;
                        padding-inline: 2.4rem 8.4rem;
                    }
