                        margin-bottom: 1.9rem;
                        line-height: 6rem;
                        max-width: 32rem;
                        @media screen and (max-width: 767px) {
                            margin-bottom: 2rem;
                            max-width: 20rem;
                        }
                    }
                    .sub {
                        max-width: 30rem;
                        margin-bottom: 3.4rem;
                        @media screen and (max-width: 767px) {
                            max-width: none;
                            margin-right: -2rem;
                            margin-bottom: 2.2rem;
                        }
                    }
                    .body {
                        max-width: 42rem;
                    }
                    img {
                        position: absolute;
                        width: 15.9rem;
                        right: 0rem;
                        top: 1.4rem;
                        pointer-events: none;
                        @media screen and (max-width: 767px) {
                            margin-bottom: 15rem;
                            top: 1rem;
                            width: 15rem;
                        }
                    }
                }
                
            }
            &:nth-child(6) {
                grid-column: span 7;
                background-color: var(--cl-pink-main);
                color: var(--cl-bg);
                .box-content {
                    padding-block: 2rem 3.2rem;
                    padding-inline: 3.2rem 2.4rem;
                    display: flex;
                    flex-direction: column;
                    @media screen and (max-width: 767px) {
                        padding-block: 1.6rem;
                        padding-inline: 2rem;
                    }
                    img {
                        width: 100%;
                        max-width: 36.7rem;
                        border-radius: .8rem;
                        border: solid .4rem var(--cl-yellow);
