                            flex-direction: column;
                            @media screen and (max-width: 767px) {
                                margin-top: 2rem;
                            }
                            &:nth-child(1) {
                                padding-right: 2.5rem;
                                position: relative;
                                @media screen and (max-width: 767px) {
                                    padding-right: 0;
                                    padding-bottom: 1.7rem;
                                }
                                .line-ver {
                                    position: absolute;
                                    top: 1.2rem;
                                    bottom: -.7rem;
                                    right: 0;
                                    --angle: 0;
                                    --gap: 1rem;
                                    --stroke: 2rem;
                                    --cl: var(--cl-bg);
                                    @media screen and (max-width: 767px) {
                                        width: 100%;
                                        height: 1px;
                                        --angle: 90deg;
                                        bottom: 0;
                                        right: 0;
                                        top: auto;
                                    }
                                }
                                .label {
                                    margin-bottom: 1rem;
                                }
                                .title-wrap {
                                    display: block;
                                    margin-bottom: .6rem;
                                    margin-right: -2rem;
                                    @media screen and (max-width: 767px) {
                                        margin-bottom: 1.2rem;
                                    }
                                    .title {
                                        display: inline;
                                        line-height: 4.5rem;
                                        @media screen and (max-width: 767px) {
                                            width: min-content;
                                            font-size: 4.8rem;
                                            line-height: 4.5rem;
                                        }
                                    }
