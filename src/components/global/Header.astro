---
import { getRelativeLocaleUrl } from 'astro:i18n';
import { Image } from "astro:assets";
import Logo from '../../assests/logo.png';
const {content, lang} = Astro.props;
---
<header class="header">
    <div class="container grid">
        <div class="header-logo">
            <a href={getRelativeLocaleUrl(lang, './')} class="header-logo-link">
                <Image src={Logo} alt="" class="img-h"/>
            </a>
        </div>
        <div class="header-menu">
            <div class="header-menu-inner">
                {content.menu.map(el => (
                    <a href={getRelativeLocaleUrl(lang, el.url)} class="header-menu-link">
                        <span class="heading h-24 txt-med txt-blue header-menu-link-txt">
                            {el.text}
                        </span>
                    </a>
                ))}
            </div>
        </div>
        <div class="header-lang">
            <div class="header-lang-wrap">
                <button class="header-lang-toggle">

                </button>
            </div>
        </div>
    </div>
</header>
<style lang="scss">
    .header {
        background-color: var(--cl-white);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 99;
        width: 100%;
        padding-block: 3.2rem 3.1rem;
        box-shadow: 0 .4rem 1rem 0 rgba(0,0,0,.1);
        &-logo {
            grid-column: 1/3;
            height: 4.7rem;
            &-link {
                height: 100%;
            }
        }
        &-menu {
            grid-column: 4/12;
            display: flex;
            align-items: center;
            justify-content: end;
            margin-bottom: .7rem;
            &-inner {
                display: flex;
                align-items: center;
                column-gap: 3rem;
            }
            &-link {
                
            }
        }
        &-lang {
            grid-column: 12/13;
            display: flex;
            align-items: center;
            justify-content: end;
            &-wrap {
                margin-bottom: .2rem;
            }
            &-toggle {
                width: 3.9rem;
                height: 2.6rem;
                border-radius: .5rem;
                border: solid 1px var(--cl-blue);
                
            }

        }
    }
</style>